{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "target": "es2022",
    /* Set the JavaScript language version for emitted JavaScript and include compatible library declarations. */
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@utils/*": [
        "./app/utils/*"
      ],
      "@components/*": [
        "./app/components/*"
      ],
      "@styles/*": [
        "./app/styles/*"
      ],
      "@hooks/*": [
        "./app/hooks/*"
      ],
      "@routes/*": [
        "./app/routes/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}